@model ModelBind.Models.Login

@{
    ViewBag.Title = "Login";
}



<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title> Login Screen</title>
</head>

<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>


<body>
    <div>
        @using (Html.BeginForm("Submit","Login",FormMethod.Post))
        {
        <i>Username</i> @Html.TextBoxFor(x => x.Username) <br /> <br />
        @*@Html.ValidationMessageFor(x => x.EmployeeCode)*@
        <i>Password</i> @Html.TextBoxFor(x => x.Password) <br /> <br />
        @*@Html.ValidationMessageFor(x => x.EmployeeName)*@
            <input id="Submit" type="submit" value="Authenticate" />
        }
 
    </div>
    
    

</body>
</html>

